<form submit={{action 'preventDefault'}}>
  <div class='fv-pull-right clearfix'>
    {{async-button
      type='submit'
      action=(action 'save')
      default='Save'
      pending='Saving...'
      fulfilled='Saved'
      rejected='Error'
      class='save fv-button fv-button-primary'
      data-test='button-save'
    }}
    {{#if delete}}
      {{async-button
        action=(action 'delete')
        default='Delete'
        pending='Deleting...'
        fulfilled='Deleted'
        class='delete fv-button fv-button-default'
        data-test='button-delete'
      }}
    {{/if}}
    <button
      type='button'
      onclick={{action 'cancel'}}
      class='cancel fv-button fv-button-default'
      data-test='button-cancel'>
      Cancel
    </button>
  </div>

  <div class='fv-padded-box'>
    {{#each filteredColumns as |column|}}
      <div class="model-column {{column.key}} {{if column.disabled 'disabled'}}">
        <label data-test={{concat 'form-label-' column.key}}>
          {{column.key}}
        </label>
        {{admin-fields/admin-field-base
          model=model
          column=column
          onUpdate=onUpdate}}
      </div>
    {{/each}}
  </div>
</form>
