<form submit={{action 'preventDefault'}}>
  <div class='admin-form-actions'>
    <div>
      <h3>{{currentRouteName}} {{recordType}}</h3>
    </div>

    <div>
      <button
        type='button'
        onclick={{action 'save' model parentModel}}
        class='admin-button '
        data-test='button-save'>
        Save
      </button>

      {{#if delete}}
        <button
          type='button'
          onclick={{action 'delete'}}
          class='admin-button '
          data-test='button-delete'>
          Delete
        </button>
      {{/if}}

      <button
        type='button'
        onclick={{action 'cancel'}}
        class='admin-button '
        data-test='button-cancel'>
        Cancel
      </button>
    </div>
  </div>

  <div class='admin-form-content-container'>
    <div class='admin-form-content'>
      {{#admin-filter-columns
        excludedColumns=excludedColumns
        recordType=recordType as |columns|}}

        {{#each columns.filteredColumns as |column|}}
          <div class="admin-form-group {{if column.disabled 'disabled'}}">

            <label data-test={{concat 'form-label-' column.key}}>
              {{format-column-name column.key}}
            </label>

            {{admin-fields/admin-field-base
              model=model
              column=column
              onUpdate=onUpdate}}

          </div>
        {{/each}}

      {{/admin-filter-columns}}
    </div>
  </div>
</form>
