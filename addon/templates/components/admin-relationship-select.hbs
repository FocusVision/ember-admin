<input
  data-test='ember-admin-relationship-select'
  placeholder={{placeholder}}
  oninput={{action 'searchTerm'}} />

{{#if hasTerm}}

  {{#admin-table-two
    recordType=recordType
    model=results as |table|}}

    {{#admin-filter-columns
      recordType=recordType as |columns|}}

      {{#each columns.filteredColumns as |column|}}
        {{table.column
          label=column.key
          key=column.key
        }}
      {{/each}}

      <!-- {{table.actionsColumn
        label='actions'
        component='column-actions-relationship'
        actionsHash=(hash
          remove=(action 'remove')
        )
      }} -->

    {{/admin-filter-columns}}
  {{/admin-table-two}}

{{/if}}
