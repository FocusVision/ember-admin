<div class='new'>
  <h2>Create</h2>

  <form>
    {{#each filteredColumns as |column|}}
      <div class="model-column {{column.key}}">
        <label>
          {{column.key}}
          {{admin-fields/admin-field-base model=model column=column didUpdate=(action 'didUpdate')}}
        </label>
      </div>
    {{/each}}

    {{async-button action=(action 'save') default="Save" pending="Saving..." fulfilled="Saved" rejected="Error" data-test='button-save'}}
    <button {{action "cancel"}} data-test='button-cancel'>Cancel</button>
  </form>
</div>
