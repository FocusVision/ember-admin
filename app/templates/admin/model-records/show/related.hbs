model-record/show/related

{{link-to
  'Create'
  'admin.model-records.new'
  recordType
  (query-params
    relationship-name=relationshipName
    relationship-id=relationshipId)
    data-test=(concat 'button-create-' recordType
  )
}}

{{fv-paginator
  current=page
  total=pageCount
  surrounding=1
}}

{{admin-filter-keyword
  value=filterKeyword
  placeholder=(concat 'Filter by ' recordType)
  onChange=(action 'onFilterChange')
  data-test='filter-input'
}}

{{admin-table
  recordType=recordType
  records=model
}}
