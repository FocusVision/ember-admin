<h2>{{recordType}}</h2>

{{link-to
  'Create'
  'admin.model-records.new'
  data-test='button-create'
}}

{{fv-paginator
  current=page
  total=pageCount
  surrounding=1
}}

{{admin-filter-keyword
  value=filterKeyword
  placeholder=(concat 'Filter by ' recordType)
  onInput=(action 'onFilterChange')
  data-test='filter-input'
}}

{{admin-table
  recordType=recordType
  model=model
}}
