{{admin-layout/page-header
  recordType=recordType
  filterKeyword=filterKeyword
  onFilterChange=(action 'onFilterChange')
}}

{{fv-paginator
  class='fv-pull-right'
  current=page
  total=pageCount
  surrounding=1
}}

{{#admin-table
  recordType=recordType
  model=model
  onRowClick=(action 'view') as |table|
}}

  {{#admin-filter-columns
    recordType=recordType as |columns|
  }}

    {{#each columns.filteredColumns as |column|}}
      {{table.column
        label=column.key
        key=column.key
      }}
    {{/each}}

  {{/admin-filter-columns}}

{{/admin-table}}
